<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.fragments.HomeMainFragment">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/headerConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <ImageView
                android:id="@+id/headerImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/header_img"
                android:adjustViewBounds="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toTopOf="@id/headerImage"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/headerImage"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/logoIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo_icon"
                    android:padding="14dp"
                    android:background="@drawable/state_selectors"
                    android:adjustViewBounds="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:focusable="true"

                    android:nextFocusRight="@id/notificationIcon"
                    android:nextFocusUp="@id/logoIcon"
                    android:nextFocusLeft="@id/logoIcon"
                    />
                <View
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"
                    android:background="@color/lb_grey"
                    />


                <LinearLayout
                    android:id="@+id/dateTimeLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:focusable="true"
                    android:nextFocusLeft="@id/logoIcon"
                    android:nextFocusRight="@id/notificationIcon"
                    android:nextFocusUp="@id/logoIcon"
                    android:nextFocusDown="@id/notificationIcon" >



                    <TextClock
                        android:id="@+id/txtClock"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:format12Hour="hh:mm a"
                        />
                    <TextClock
                        android:id="@+id/txtClock2"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:format12Hour="EEE, MMM d, yyyy"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="150dp"
                    android:orientation="horizontal">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/notificationIcon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:background="@drawable/state_selectors"
                        android:focusable="true"
                        android:nextFocusRight="@id/settingItem"
                        android:nextFocusDown="@id/settingItem"
                        android:nextFocusLeft="@id/logoIcon"
                        android:nextFocusUp="@id/logoIcon"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/notification"
                            android:adjustViewBounds="true"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/circular_shape"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:text="1"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textSize="@dimen/_5sdp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:id="@+id/settingItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/state_selectors"
                        android:focusable="true"
                        android:nextFocusRight="@id/adsRecyclerView"
                        android:nextFocusLeft="@id/notificationIcon"
                        android:nextFocusDown="@id/update"
                        android:nextFocusUp="@id/notificationIcon"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/settings"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:adjustViewBounds="true"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Settings"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp"
                            />
                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/lowerBG2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/bg"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <fragment
        android:id="@+id/main_home_nav_host_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:name="androidx.navigation.fragment.NavHostFragment"
        app:navGraph="@navigation/main_home_nav_graph"
        app:defaultNavHost="true"
        app:layout_constraintTop_toBottomOf="@id/headerConstraintLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>