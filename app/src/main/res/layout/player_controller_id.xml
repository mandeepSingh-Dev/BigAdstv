<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/userImageview"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:src="@drawable/user"
                android:adjustViewBounds="true"
                app:layout_constraintTop_toTopOf="@id/username"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/username"
                app:layout_constraintRight_toLeftOf="@id/username"
                />
            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Cahyadi Purnomo"
                android:layout_marginLeft="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/userImageview"
                />

            <ImageView
                android:id="@+id/locationImageview"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="13dp"
                android:src="@drawable/address_location"
                android:adjustViewBounds="true"
                app:layout_constraintTop_toTopOf="@id/location"
                app:layout_constraintLeft_toRightOf="@id/username"
                app:layout_constraintBottom_toBottomOf="@id/location"
                app:layout_constraintRight_toLeftOf="@id/location"
                />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Noida"
                android:layout_marginLeft="6dp"
                app:layout_constraintTop_toTopOf="@id/username"
                app:layout_constraintBottom_toBottomOf="@id/username"
                app:layout_constraintLeft_toRightOf="@id/locationImageview"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Play Full"
            android:includeFontPadding="false"
            android:layout_marginTop="10dp"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/dateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="25 Jan,2024 11:30 am"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <TextView
        android:id="@+id/videoTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="00:35:18"
        android:textStyle="bold"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>