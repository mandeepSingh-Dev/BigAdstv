<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="oval"
            >
            <solid
                android:color="#2CFFE500"/>
        </shape>

    </item>

    <item android:gravity="start">
        <shape>
            <gradient
                android:startColor="@color/black">
            </gradient>
        </shape>
    </item>
    <item android:gravity="end" android:right="1dp">
        <shape>
            <gradient
                android:startColor="@color/black">
            </gradient>
        </shape>
    </item>




</layer-list>